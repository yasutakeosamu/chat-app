<div class="message">
  <div class="upper_message">
    <div class="name">
      <%# 投稿したユーザー名情報を出力する %>
      <%= message.user.name %>
    </div>
    <div class="date">
      <%# 投稿した時刻を出力する %>
      <%= l message.created_at%>
    </div>
  </div>
  <div class="lower_message">
    <div class="text">
      <%# 投稿したメッセージ内容を記述する %>
      <%= message.content %>
    </div>
  </div>
</div>